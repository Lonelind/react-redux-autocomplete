.autocomplete
    display: inline-block
    position: relative
    min-width: 200px
    

    &_open &__placeholder
        top: 0
        

    &_open &__list-wrapper
        display: block
        height: auto
        

    &_drop_down&_open &__query
        border-radius: 4px 4px 0 0
        

    &_drop_down&_open &__list-wrapper
        top: 100%
        margin-top: -1px
        
        border-radius: 0 0 4px 4px
        

    &_drop_up&_open &__query
        border-radius: 0 0 4px 4px
        

    &_drop_up&_open &__list-wrapper
        bottom: 100%
        margin-bottom: -1px
        
        border-radius: 4px 4px 0 0


    &__query
        display: block
        position: relative
        
        border: 1px solid #a0a0a0
        border-radius: 4px
        background: #fff
        
        z-index: 1
        

    &__input
        width: 100%
        padding: 8px 25px 8px 10px
        box-sizing: border-box
        
        line-height: 18px
        font-size: 16px
        
        border: none
        background: none
        outline: none
        

    &__arrow
        width: 25px
        position: absolute
        top: 50%
        right: 0
        
        transform: translateY(-50%)
        
        font-size: 0.65em
        
        color: #a0a0a0
        text-align: center
        cursor: default
        
        z-index: 1
        

        &_style_cross
            font-size: 1em
            

    &__placeholder
        position: absolute
        top: 50%
        left: 8px
        padding: 0 4px
        
        transform: translateY(-50%)
        transition: top .1s linear
        pointer-events: none
        
        font-size: 0.8em
        
        color: #a0a0a0
        background: #fff
        
        z-index: 3
        

    &__list-wrapper
        display: none
        height: 0
        position: absolute
        width: 100%
        max-height: 360px
        overflow: hidden
        box-sizing: border-box
        
        transition: height .1s linear
        
        border: 1px solid #a0a0a0
        border-radius: 4px
        background: #fff
        
        z-index: 4
        

    &__list
        width: 100%
        height: 100%
        margin: 0
        padding: 0
        

    &__item
        padding: 6px 10px
        line-height: 18px
        
        cursor: pointer
        

        &:hover
            background: #face8d
            
        
        &_selected
        &_selected:hover
            background: #63a6ea
            

    &__query-match
        text-decoration: underline
        font-weight: bold
        
        background: none
        

    &__select
        width: 100%
        height: 0
        position: absolute
        top: 2px
        right: 0
        
        z-index: 0
        

        &.is-hidden
            display: none